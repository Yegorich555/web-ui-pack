{
  "compilerOptions": {
    "outDir": "./lib",
    "noEmitOnError": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", ".vscode", "lib", "icomoon"]
}
