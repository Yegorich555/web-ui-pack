{
  "compilerOptions": {
    "outDir": "./lib",
    "noEmitOnError": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "jsxFactory": "Core.renderElement",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", ".vscode", "lib", "src/implementLater/JSXcreateElement.ts", "icomoon"]
}
