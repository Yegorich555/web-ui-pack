{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "build", ".vscode", "lib"]
}
