{
  "compilerOptions": {
    "outDir": "./dist",
    "noEmitOnError": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    // "jsxImportSource": "preact",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "preserveConstEnums": true
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", ".vscode", "lib", "dist", "icomoon", "src/**/*.example.*"]
}
